generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}
model Patient {
  id          Int      @id @default(autoincrement())
  name        String
  age         Int
  gender      String
  contact     String
  roomNumber  String
  dietCharts  DietChart[]
}

model DietChart {
  id                  Int      @id @default(autoincrement())
  patientId           Int
  patient             Patient  @relation(fields: [patientId], references: [id])
  morningMeal         String
  afternoonMeal       String
  nightMeal           String
  ingredients         String
  specialInstructions String
}